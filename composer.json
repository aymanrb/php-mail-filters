{
  "name": "aymanrb/php-mail-filters",
  "description": "A library to help you create GMAIL like mail filters in your PHP Application",
  "type": "library",
  "license": "MIT",
  "require": {
    "ext-imap": "*",
    "php": ">=7.2.0"
  },
  "require-dev": {
    "symfony/yaml": "^3.4",
    "ddeboer/imap": "^1.5",
    "php-imap/php-imap": "^3.0",
    "phpunit/phpunit": "^8.4"
  },
  "autoload": {
    "psr-4": {
      "MailFilters\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MailFilters\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Ayman R. Bedair",
      "email": "aymanrb@gmail.com",
      "homepage": "http://www.aymanrb.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/aymanrb/mail_filters"
}
